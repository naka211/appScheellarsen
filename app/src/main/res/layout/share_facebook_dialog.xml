<!-- fragment_edit_name.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/dimen_20_40"
    android:paddingRight="@dimen/dimen_20_40"
    card_view:cardCornerRadius="@dimen/dimen_4_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10_20"
        android:paddingLeft="@dimen/dimen_20_40"
        android:paddingRight="@dimen/dimen_20_40"
        android:paddingTop="@dimen/dimen_10_20">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Del Facebook"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_mesg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_5_10"
            android:layout_marginTop="@dimen/dimen_5_10"
            android:gravity="center"
            android:text="Kan du dele dine billeder pÃ¥ facebook?" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/dimen_80_160"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corners_dialog"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_5_10"
                android:paddingTop="@dimen/dimen_5_10"
                android:text="@string/cancel"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="@dimen/dimen_80_160"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_20"
                android:background="@drawable/btn_share_facebook"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_5_10"
                android:paddingTop="@dimen/dimen_5_10"
                android:text="@string/ok"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>